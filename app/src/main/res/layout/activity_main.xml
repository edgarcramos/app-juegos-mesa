<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="computomovil.proyecto.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@mipmap/ic_launcher">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#ff0000">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JUEGOS"
                android:id="@+id/btn_juegos"
                android:layout_gravity="center"
                android:backgroundTint="#F00"
                android:textStyle="bold|italic"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GALERIA"
                android:id="@+id/btn_galeria"
                android:layout_gravity="center"
                android:backgroundTint="#0F0"
                android:textStyle="bold|italic"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIENDAS"
                android:id="@+id/btn_tiendas"
                android:layout_gravity="center"
                android:backgroundTint="#00F"
                android:textStyle="bold|italic"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MINI JUEGO"
                android:id="@+id/btn_mini_juego"
                android:layout_gravity="center"
                android:textStyle="bold|italic"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
